
<table class="table table-dark text-center">
  <thead>
    <tr>
    <th scope="col"></th>
    <th scope="col">Object</th>
    <th scope="col">Body</th>
    </tr>
    </thead>
    <tbody id="email-list">
    <tr id="delete">
    <% @emails.each do |email| %>
        <th scope="row">Votre mail :</th>
          <td ><%= link_to "#{email.object}", email_path(email), :class => 'home_links', :style => 'color: black', remote: true%></td>
          <td><div id = "email_show"></div></td>
          </tr>
    <% end %>
  </tbody>
    </table>
  
<br>
<button type="button" class="btn btn-success btn-lg btn-block"><%= link_to "Recevoir un Email", emails_path, :class => 'home_links', :style => 'color: black', method: :post, remote: true%></button>
